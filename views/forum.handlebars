<section class="col-xl-6 col-lg-8 col-md-12 col-sm-12" id="main-window-container">
    <div class="main-window-header-image mirror-image"><img src="Img/trees-telephone.jpg"
            alt="Sunset view and tree-tops" id="home-sunset-picture"></div>
    <div class="main-page-icon"><i class="fas fa-comment color-pink"></i></div>
    <div class="header-headline">react<div class="header-headline-bolded">AND</div>read</div>

    <div class="flex-two-rows-comment">
        <div class="flex-left-comment">
            <!-- Add a form for posting comments -->
            <form action="/post-comment" method="POST" id="post" class="comment-container">
                <div class="header-in-box">post<div class="header-in-box2">YOUR</div>message</div>
                <input type="text" name="post" id="comment" class="input-box-comment" required autocomplete="off"
                    placeholder="50 character limit:" title="Post a comment">
            </form>

            <!-- Add a form for searching posters -->
            <form action="/search-comment" method="POST" id="search" class="comment-container">
                <div class="header-in-box">search<div class="header-in-box2">POSTER</div>here</div>
                <input type="text" name="search poster" id="password" class="input-box-comment" required
                    autocomplete="off" placeholder="find poster:" title="Search for poster">
            </form>
        </div>

        <div class="flex-right-comment">
            <!-- Include Handlebars code for displaying comments -->
            {{#if comments.length}}
                {{#each comments}}
                <div class="comment-box">
                    <div class="empty-comment-box-header">
                        <div class="comment-name">{{ this.poster_name }}</div>
                        <div class="comment-date">{{ this.comment_timestamp }}</div>
                        <button class="comment-delete-button">X</button>
                    </div>
                    <div class="comment-content">{{ this.comment_post }}</div>
                </div>
                {{/each}}
            {{else}}
                <p>No comments available.</p>
            {{/if}}
        </div>
    </div>
</section>
<script type="module" src="./script.js"></script>