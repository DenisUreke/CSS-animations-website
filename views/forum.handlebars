<section class="col-xl-6 col-lg-8 col-md-12 col-sm-12" id="main-window-container">
    <div class="main-window-header-image mirror-image"><img src="Img/trees-telephone.jpg"
            alt="Sunset view and tree-tops" id="home-sunset-picture"></div>
    <div class="main-page-icon"><i class="fas fa-briefcase color-pink"></i></div>
    <div class="header-headline">react<div class="header-headline-bolded">AND</div>read
